<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <FrameLayout
        android:layout_width="327dp"
        android:layout_height="487dp"
        android:background="@drawable/login_corner"
        android:layout_marginTop="137dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp" >

        <ImageView
            android:id="@+id/loginBtn"
            android:layout_width="186dp"
            android:layout_height="196dp"
            android:background="@android:color/transparent"
            android:src="@drawable/qr_view"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="32sp"
            android:textColor="#352641"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="319dp"
            android:fontFamily="@font/a15"
            android:text="관리자 로그인"/>

        <TextView
            android:id="@+id/qrContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#767676"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="369dp"
            android:text="관리자 전용 QR코드를\n스캔해주세요"
            android:fontFamily="@font/a12"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>