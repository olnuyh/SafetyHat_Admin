<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/login_corner"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <ImageButton
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/x_btn"
        android:background="#ffffff"
        android:layout_marginTop="9dp"
        android:layout_marginStart="11dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/calendarStartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:text="시작 날짜"
        android:textSize="13sp"
        android:fontFamily="@font/a13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/calendarStart"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:textColor="#de000000"
        android:background="@drawable/stroke_round"
        android:fontFamily="@font/a13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarStartTitle" />


    <ImageButton
        android:id="@+id/calendarStartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/calendar_icon"
        android:text="시작달력 아이콘 이미지"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calendarStart"
        app:layout_constraintTop_toTopOf="@+id/calendarStart" />

    <TextView
        android:id="@+id/calendarEndTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/a13"
        android:text="종료 날짜"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarStart" />

    <TextView
        android:id="@+id/calendarEnd"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/a13"
        android:paddingLeft="5dp"
        android:textColor="#de000000"
        android:gravity="center_vertical"
        android:background="@drawable/stroke_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarEndTitle" />

    <ImageButton
        android:id="@+id/calendarEndBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/calendar_icon"
        android:text="마감 달력 아이콘 이미지"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calendarEnd"
        app:layout_constraintTop_toTopOf="@+id/calendarEnd" />

    <TextView
        android:id="@+id/calendarRegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="27dp"
        android:fontFamily="@font/a13"
        android:text="일정 내용"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarEnd" />

    <EditText
        android:id="@+id/calendarContents"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/a13"
        android:background="@drawable/stroke_round"
        android:ems="10"
        android:padding="5dp"
        android:gravity="top"
        android:textSize="13sp"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarRegisterTitle" />

    <ImageButton
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarContents"
        app:srcCompat="@drawable/ok_mint_btn" />

    <TextView
        android:id="@+id/registerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a13"
        android:text="등록"
        android:textColor="#de000000"
        android:textStyle="normal"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/registerBtn"
        app:layout_constraintEnd_toEndOf="@+id/registerBtn"
        app:layout_constraintStart_toStartOf="@+id/registerBtn"
        app:layout_constraintTop_toTopOf="@+id/registerBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
