<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteCalendarActivity">

    <TextView
        android:id="@+id/calendarStartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="255dp"
        android:text="시작 날짜"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/calendarStart"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/stroke_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/calendarStartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="280dp"
        android:background="@android:color/transparent"
        android:src="@drawable/calendar_icon"
        android:text="시작달력 아이콘 이미지"
        app:layout_constraintStart_toEndOf="@+id/calendarStart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendarEndTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="325dp"
        android:text="종료 날짜"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendarEnd"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/stroke_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/calendarEndBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="345dp"
        android:background="@android:color/transparent"
        android:src="@drawable/calendar_icon"
        android:text="마감 달력 아이콘 이미지"
        app:layout_constraintStart_toEndOf="@+id/calendarEnd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendarRegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="165dp"
        android:text="일정 내용"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/calendarContents"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/stroke_round"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/calendarRegisterBtn"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_marginTop="408dp"
        android:background="@android:color/transparent"
        android:src="@drawable/calendar_ok"
        android:text="등록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
