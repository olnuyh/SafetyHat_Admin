<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/sos_message">

    <TextView
        android:id="@+id/sosMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/a12"
        android:textSize="10sp"
        android:text="날짜"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sosMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/a12"
        android:textSize="10sp"
        android:text="시간"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sosMessageDate" />

    <TextView
        android:id="@+id/sosMessageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/a12"
        android:text="이름"
        app:layout_constraintStart_toEndOf="@+id/sosMessageDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sosMessageContents"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="13sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/a14"
        android:text="내용"
        android:textColor="#F58D34"
        app:layout_constraintBottom_toBottomOf="@+id/sosMessageName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sosMessageName"
        app:layout_constraintTop_toTopOf="@+id/sosMessageName" />

</androidx.constraintlayout.widget.ConstraintLayout>