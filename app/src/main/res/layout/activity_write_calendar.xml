<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteCalendarActivity">


    <TextView
        android:id="@+id/calendar_start_tv"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/calendar_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달력 아이콘 이미지"
        app:layout_constraintStart_toEndOf="@+id/calendar_start_tv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/calendar_end_tv"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/calendar_start_tv"
        app:layout_constraintStart_toStartOf="@+id/calendar_start_tv" />

    <Button
        android:id="@+id/calendar_end_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달력 아이콘 이미지"
        app:layout_constraintStart_toEndOf="@+id/calendar_end_tv"
        app:layout_constraintTop_toBottomOf="@+id/calendar_start_btn"/>

    <EditText
        android:id="@+id/calendar_content_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="작업내용"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/calendar_end_tv"
        app:layout_constraintTop_toBottomOf="@+id/calendar_end_tv" />

    <Button
        android:id="@+id/calendar_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        app:layout_constraintTop_toBottomOf="@+id/calendar_content_et"
        app:layout_constraintStart_toStartOf="@id/calendar_content_et"/>
</androidx.constraintlayout.widget.ConstraintLayout>