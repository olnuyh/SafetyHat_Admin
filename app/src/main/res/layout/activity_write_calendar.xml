<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteCalendarActivity">


    <TextView
        android:id="@+id/calendarStart"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/calendarStartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달력 아이콘 이미지"
        app:layout_constraintStart_toEndOf="@+id/calendarStart"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/calendarEnd"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarStart"
        app:layout_constraintStart_toStartOf="@+id/calendarStart" />

    <Button
        android:id="@+id/calendarEndBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달력 아이콘 이미지"
        app:layout_constraintStart_toEndOf="@+id/calendarEnd"
        app:layout_constraintTop_toBottomOf="@+id/calendarStartBtn"/>

    <EditText
        android:id="@+id/calendarContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="작업내용"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/calendarEnd"
        app:layout_constraintTop_toBottomOf="@+id/calendarEnd" />

    <Button
        android:id="@+id/calendarRegisterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        app:layout_constraintTop_toBottomOf="@+id/calendarContents"
        app:layout_constraintStart_toStartOf="@id/calendarContents"/>
</androidx.constraintlayout.widget.ConstraintLayout>