<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:id="@+id/drawerLayout"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sosTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="130dp"
            android:textColor="#3e4f87"
            android:fontFamily="@font/nanumsquare_round_b"
            android:text="긴급연락"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="170dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#6f6f6f"
            android:textSize="13sp"
            android:textStyle="normal"
            android:fontFamily="@font/nanumsquare_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="최근 메세지" />

        <TextView
            android:id="@+id/sosTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="209dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#6f6f6f"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/sosName"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="시간" />

        <TextView
            android:id="@+id/sosName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="209dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#6f6f6f"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="이름" />


        <TextView
            android:id="@+id/sosText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="209dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#6f6f6f"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sosName"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="메세지 내용" />

        <TextView
            android:id="@+id/sosTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#6f6f6f"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/sosName2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="시간" />

        <TextView
            android:id="@+id/sosName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="250dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#6f6f6f"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="이름" />


        <TextView
            android:id="@+id/sosText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="250dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#6f6f6f"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sosName2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="메세지 내용" />


        <TextView
            android:id="@+id/cctvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="330dp"
            android:textColor="#3e4f87"
            android:text="실시간 현장상황"
            android:fontFamily="@font/nanumsquare_round_b"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/area_a_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="375dp"
            android:background="@android:color/transparent"
            android:src="@drawable/area_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/area_b_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="375dp"
            android:layout_marginEnd="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/area_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cctvarea_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="390dp"
            android:background="@android:color/transparent"
            android:src="@drawable/left_arrowbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cctvarea_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="42dp"
            android:background="@android:color/transparent"
            android:src="@drawable/right_arrowbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wearherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="500dp"
            android:textColor="#3e4f87"
            android:text="오늘의 날씨"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquare_round_b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:layout_marginEnd="80dp"
            android:text="서울"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tempView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tempView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/weathericon"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="476dp"
            app:layout_constraintStart_toEndOf="@+id/tempView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/mainWorker"
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="620dp"
            android:background="@android:color/transparent"
            android:src="@drawable/main_worker"
            android:text="근무자 관리"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/mainSalary"
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="620dp"
            android:background="@android:color/transparent"
            android:src="@drawable/main_salary"
            android:text="급여내역"
            app:layout_constraintStart_toEndOf="@+id/mainWorker"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/mainCalendar"
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:layout_marginTop="620dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/main_calendar"
            android:text="작업 일정표"
            app:layout_constraintEnd_toStartOf="@+id/mainNotification"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/mainNotification"
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:layout_marginTop="620dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/main_notification"
            android:text="공지사항"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/area_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="393dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="7sp"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:fontFamily="@font/nanumsquare_round_b"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/area_a_btn"
            app:layout_constraintStart_toStartOf="@+id/area_a_btn"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="A구역" />

        <TextView
            android:id="@+id/area_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="393dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="7sp"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/nanumsquare_round_b"
            app:layout_constraintEnd_toEndOf="@+id/area_b_btn"
            app:layout_constraintStart_toStartOf="@+id/area_b_btn"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="B구역" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/main_drawer_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        app:itemIconTint="#7e84a3"
        app:itemTextColor="#99000000"
        app:itemTextAppearance="@font/robotomedium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:background="@color/main">
            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/logout_icon"
                android:text="로그아웃"
                android:fontFamily="@font/a12"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="5sp"/>
        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>
