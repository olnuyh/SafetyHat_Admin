<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_list_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:text="근무자 관리 페이지"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_calendar_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:text="일정표"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_list_btn"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_cctv_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="실시간 현장"
        app:layout_constraintStart_toStartOf="@+id/main_list_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_list_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_salary_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="급여"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_cctv_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_calendar_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_notification_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="공지"
        app:layout_constraintStart_toStartOf="@+id/main_cctv_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_cctv_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>