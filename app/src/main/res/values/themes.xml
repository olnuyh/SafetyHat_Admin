<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Admin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#939393</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/a12</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="navigation_item_font" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/a12</item>
    </style>

    <style name="calendar_text" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/a12</item>
    </style>
</resources>